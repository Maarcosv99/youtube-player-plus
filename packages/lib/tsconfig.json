{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ESNext",
        "module": "ES2020",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": true,
        "emitDeclarationOnly": true,
        "resolveJsonModule": true,
        "declaration": true,
        "baseUrl": ".",
        "strict": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "types": [
            "jest"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "tests/**/*",
        "global.d.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "transpileOnly": true
    }
}
